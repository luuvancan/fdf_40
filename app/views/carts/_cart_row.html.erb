<%= form_for order_item, remote: true do |f| %>
<div class="cart-header3">
 <div class="close3"> </div>
  <div class="cart-sec simpleCart_shelfItem">
    <div class="cart-item cyc">
    <%= image_tag product.image, class: "img-responsive" %>
    </div>
     <div class="cart-item-info">
    <h3>Name: <%= product.name %></h3>
    <p><strong>Unit price:</strong> $<%= product.price.to_f %></p>
    <p><strong>Quantity:</strong><%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control ", min: 1 %></p>
      <%= f.hidden_field :product_id, value: product.id %>
     <p><strong>Total price:</strong> $<%= order_item.total_price.to_f %> </p>
       <div class="delivery">
       <%= f.submit "Update", class: "btn btn-primary update_bt" %>
        <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger delete_bt_cart" } %>
       <div class="clearfix"></div>
        </div>
     </div>
     <div class="clearfix"></div>
  </div>
</div>
<% end %>




