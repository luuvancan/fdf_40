<%= render "layouts/header" %>
  <div class="blog">
    <div class="container">
      <div class="agile-blog-grids">
        <div class="col-md-6 agile-blog-grid-left">
          <div class="agile-blog-grid">
            <div class="agile-blog-grid-left-img">
              <%= image_tag @product.image, alt: "Rails logo"%>
            </div>
            <div class="opinion">
              <h3>Leave Your Comment</h3>
              <form action="#" method="post">
                <input type="text" name="Name" placeholder="Name" required="">
                <input type="text" name="Email" placeholder="Email" required="">
                <textarea name="Message" placeholder="Message" required=""></textarea>
                <input type="submit" value="SEND">
              </form>
            </div>
          </div>
        </div>
        <div class="blog-left-grids col-md-6">
          <div class="blog-left-right">
            <div class="blog-left-right-top">
              <h4> <%= @product.name %> </h4>
              <p>Posted By <a href="#">Admin</a> &nbsp;&nbsp; on June 2, 2016 &nbsp;&nbsp; <a href="#">Comments (10)</a></p>
            </div>
            <div class="blog-left-right-bottom">
              <p> <%=@product.description%> </p>
              <%=button_to( "Add Shopping Cart", cart_path(@product.id), :method => :get) %>
            </div>
          </div>
          <div class="clearfix"> </div>
        </div>
    </div>
  </div>
 </div>

